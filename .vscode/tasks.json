{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Clean",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "cd '${workspaceFolder}' && rm -rf public/data/step_* temp/*"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Process OSM",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "ts-node",
                "--",
                "${workspaceFolder}/src/mapgen/gen_data.ts"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": []
        },
        {
            "label": "Atlas",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "ts-node",
                "--",
                "${workspaceFolder}/src/mapgen/generate_atlas.ts"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": []
        },
        {
            "label": "WASM",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "source /mnt/WoB/WOB/web_rep/emsdk/emsdk_env.sh && make -C '${workspaceFolder}/src/wasm'"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": []
        }
    ]
}